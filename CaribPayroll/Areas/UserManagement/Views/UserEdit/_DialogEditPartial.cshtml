@model CaribPayroll.Areas.UserManagement.Models.UserListViewModel
@*//define the model for store the model values*@

@using Syncfusion.EJ2

    <div>
        <div class="form-group">
            <div class="e-float-input e-control-wrapper">
                <input asp-for="Id" value=@Model.Id disabled type='hidden' />
                @*<span class="e-float-line"></span>
                <label asp-for="Id" class="e-float-text e-label-top">ID</label>*@
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="UserName" value=@Model.UserName />
                    <span class="e-float-line"></span>
                    <label asp-for="UserName" class="e-float-text e-label-top">User Name</label>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="Surname" value=@Model.Surname />
                    <span class="e-float-line"></span>
                    <label asp-for="Surname" class="e-float-text e-label-top">Surname</label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="FirstName" value=@Model.FirstName />
                    <span class="e-float-line"></span>
                    <label asp-for="FirstName" class="e-float-text e-label-top">FirstName</label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="MiddleName" value=@Model.MiddleName />
                    <span class="e-float-line"></span>
                    <label asp-for="MiddleName" class="e-float-text e-label-top">MiddleName</label>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <div class="e-float-input e-control-wrapper">
                    <input asp-for="EmployeeNumber" value=@Model.EmployeeNumber />
                    <span class="e-float-line"></span>
                    <label asp-for="EmployeeNumber" class="e-float-text e-label-top">Employee Number</label>
                </div>
            </div>
        </div>

    </div>

<ejs-scripts></ejs-scripts>
